@require '../../../../../../variables.styl'

.metamaskButton.metamaskButton {
  background-color: #999999;
  border-radius: 7px;
  padding: 4px 16px;
  transition: background-color 300ms linear;

  &.active {
    background-color: #B56625;
  }
}

.input.input {
  padding: 0;
  margin-bottom: 0;
  width: 100%;

  input {
    background-color: transparent;
    text-align: center;
    font-size: 18px;
    color: $NWhite;
  }
}