@require '../../../../../../variables.styl'

.metamaskButton.metamaskButton {
  background-color: #999999;
  border-radius: 7px;
  padding: 4px 16px;
  transition: background-color 300ms linear;

  &.active {
    background-color: #B56625;
  }
}

.inputWrapperDark {
  width: 100%;
  input {
    background-color: $NBlack;
    border-radius: 12px;
    padding: 4px 12px;
    border: 1px solid $NWhite;
    text-align: center;
    font-size: 18px;
    color: $NWhite;
  }
}

.inputWrapperLight {
  width: 100%;
  input {
    background-color: $NWhite;
    border-radius: 12px;
    padding: 4px 12px;
    border: 1px solid $NGray;
    text-align: center;
    font-size: 18px;
    color: $NBlack;
  }
}

.inputOverride.inputOverride {
  color: $NWhite;
}


