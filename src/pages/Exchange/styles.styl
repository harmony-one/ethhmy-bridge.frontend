.addressLink {
    text-decoration none
    font-family Courier
    color #47b8eb
}

.fill {
    width: 100%;
}

.exchangeContainer {
    background: #FFFFFF;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.04);
    border-radius: 4px;
}

.warning_message{
    opacity: 0;
    transition: 0.3s;
    position: absolute;
    bottom -85px;
    left: 153;
    border: 1px solid #c7cac3
    background: white;
    min-width: 380px;
    z-index: 2;
    display: none;
    box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.28);

}

.warningSign{
    position: relative;
    cursor: pointer;

}

.image_warning {
    animation: pulse-animation 2s infinite;
}

.follow_transaction {
    cursor: pointer;
    animation: fade 1s infinite;
}

@keyframes pulse-animation {
    0% {
        transform: rotate(25deg);
    }
    25% {
        transform: rotate(0deg);
    }
    50% {
        transform: rotate(-25deg);
    }
    75% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(25deg);
    }
}

.networktemplatetoken{
    box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.28);
    background-color: #E1FEF2;
    border-radius: 5px;
}

.warningSign:hover .warning_message{
    opacity: 1;
    display: block;
}

.maxAmountInput{
    max-width: 80px;
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: right;
}

.itemToken {
    flex-direction row
    align-items center
    padding 14px 24px 12px 22px
    cursor pointer
    position relative

    .imgToken {
        max-height 24px
        width 24px
        margin-right 10px
    }

    > span {
        font-size 18px
        font-weight 500
        color rgb(33, 45, 94)
    }

    &.selected {
        // color #00ADE8
        // border-bottom 1px solid #00ADE8
        border-radius 5px
        background #f2f3f8
        position relative
        border 1px solid #212529
        &:after {
            display none
            position absolute
            content ''
            width: 100%
            height 2px
            bottom -2px
            left 0px

            background: linear-gradient(269.98deg, #69FABC -0.02%, #00ADE8 100%);
        }
    }
}

@media screen and (max-width: 800px) {
    .exchangeContainer {
        width 100%
    }
}
